import rclpy
from rclpy.node import Node
import tf2_ros
import time

class PatrolNode(Node):
    def __init__(self):
        super().__init__('nav2_patrol_node')
        self.tf_buffer = tf2_ros.Buffer()
        self.tf_listener = tf2_ros.TransformListener(self.tf_buffer, self)

        self.get_logger().info('等待 Nav2 啟動...')
        # 你的 Nav2 啟動程式碼

        self.get_logger().info('等待定位完成 (等待 map->odom transform)...')

        self.timer = self.create_timer(1.0, self.check_transform)
        self.transform_ready = False

    def check_transform(self):
        if self.transform_ready:
            return
        try:
            trans = self.tf_buffer.lookup_transform('map', 'odom', rclpy.time.Time())
            self.get_logger().info(f'取得 map->odom transform: {trans.transform}')
            self.transform_ready = True
            # 這裡可以開始巡邏或其他工作
        except Exception as e:
            self.get_logger().warn(f'Cannot get map->odom transform: {e}')

def main(args=None):
    rclpy.init(args=args)
    node = PatrolNode()
    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        pass
    finally:
        node.destroy_node()
        rclpy.shutdown()

if __name__ == '__main__':
    main()

